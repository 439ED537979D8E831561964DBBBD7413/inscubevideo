<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_design"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:src="@drawable/xbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Cube code is user-defined secret code (limited to 10 characters) which is necessary to join a closed cube. Once created, the Cube code cannot be changed. Please keep it safely and share it only within your particular community"
        android:textColor="@color/Storytxt"
        android:textSize="12sp" />


</LinearLayout>