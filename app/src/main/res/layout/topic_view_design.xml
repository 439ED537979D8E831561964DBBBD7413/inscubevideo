<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main3"
    android:background="@color/White"
    android:orientation="vertical"
    android:padding="5dp">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:weightSum="100"
     android:orientation="horizontal">
     <TextView
         android:layout_weight="80"
         android:id="@+id/topic_name"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="2dp"
         android:paddingBottom="5dp"
         android:paddingLeft="3dp"
         android:text="Topic 1"
         android:textColor="@color/Storytxt"
         android:textSize="17sp"
         android:textStyle="bold" />

     <LinearLayout
         android:layout_weight="20"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:gravity="right"
         android:orientation="horizontal">


         <ImageView
             android:id="@+id/more_option1"
             android:layout_width="22dp"
             android:layout_height="20dp"
             android:layout_marginRight="3dp"
             android:layout_marginTop="1dp"
             android:background="@null"
             android:src="@drawable/moreoptions" />
     </LinearLayout>


 </LinearLayout>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:text="Description"
        android:textColor="@color/Storytxt"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/topic_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Welcome to cube.this cube is about"
        android:textColor="@color/Storytxt"
        android:textSize="14sp" />
     </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/Storytxt">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cube_img_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/no_filetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Files"
            android:visibility="gone" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/Storytxt">

    </View>

</LinearLayout>